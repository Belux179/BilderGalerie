<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="fas fa-cloud-upload-alt"></i> Carga una Imagen
    </h3>
  </div>
  <div class="card-body">
    <form class="" action="/images" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <div class="input-group">
          <!--Archivo -->
          <div class="custom-file">
            <!--file con bootstrap -->
            <input type="file" name="image" class="custom-file-input" id="inputGroup"
              aria-describedby="inputGroupFileAddon" required>
            <label class="custom-file-label" for="inputGroupFile">Subir Archivo</label>
          </div>

        </div>
      </div>
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Titulo para la imagen" required>
      </div>
      <div class="form-group">
        <textarea name="description" rows="5" class="form-control" placeholder="Descripcion de la imagen"
          required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success">
          <i class="fas fa-cloud-upload-alt"></i> Subir Imagen
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i> Subidas </h3>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/{{uniqueID}}">
          <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>